{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~~/*": ["./*"],
      "~/*": ["./packages/*"],
      "~/lib/*": ["./packages/nextjs/lib/*"],
      "~/components/*": ["./packages/nextjs/components/*"],
      "~/styles/*": ["./packages/nextjs/styles/*"]
    },
    
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts","packages/**/*"],
  "exclude": ["node_modules"]
}
